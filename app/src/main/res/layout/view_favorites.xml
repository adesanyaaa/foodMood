<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/favorites_full_app_bar"
        android:layout_width="@dimen/app_bar_icon"
        android:layout_height="@dimen/app_bar_icon"
        android:layout_marginEnd="@dimen/half_padding"
        android:layout_marginStart="@dimen/half_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_heart_full"
        android:contentDescription="@string/content_description_favorite" />
</androidx.constraintlayout.widget.ConstraintLayout>