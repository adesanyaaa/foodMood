<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!--    adding data binding for Add recipe form - for cleaner code-->
    <data>
        <variable
            name="addRecipeViewmodel"
            type="vaida.dryzaite.foodmood.ui.addRecipe.AddRecipeViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/add_recipe_fragment"
        tools:context=".ui.addRecipe.AddRecipeFragment">

        <ImageView
            android:id="@+id/gradient_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:contentDescription="@string/gradient_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/horizontal_guideline_top2"
            app:srcCompat="@drawable/rounded_background" />

        <TextView
            android:id="@+id/add_recipe_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dosis_regular"
            android:gravity="center_horizontal"
            android:text="@string/add_recipe"
            android:textSize="@dimen/generate_random_meal_text_size"
            app:layout_constraintBottom_toTopOf="@id/horizontal_guideline_top"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/title_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/vertical_guideline_right"
            app:layout_constraintStart_toStartOf="@id/vertical_guideline_left"
            app:layout_constraintTop_toBottomOf="@id/add_recipe_text_view"
            app:layout_constraintBottom_toTopOf="@id/url_input_layout"
            app:layout_constraintVertical_chainStyle="spread">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/title_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Text"
                android:fontFamily="@font/dosis_medium"
                android:textSize="@dimen/list_item_text_size"
                android:backgroundTint="@color/Text"
                android:textColorHint="@color/colorSecondaryDark"
                android:hint="@string/title"
                android:inputType="text"
                android:text="@={addRecipeViewmodel.title}"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/url_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/vertical_guideline_right"
            app:layout_constraintStart_toStartOf="@id/vertical_guideline_left"
            app:layout_constraintTop_toBottomOf="@id/title_input_layout"
            app:layout_constraintBottom_toTopOf="@id/lunch_icon">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/url_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Text"
                android:fontFamily="@font/dosis_medium"
                android:textSize="@dimen/list_item_text_size"
                android:backgroundTint="@color/Text"
                android:textColorHint="@color/colorSecondaryDark"
                android:hint="@string/url"
                android:text="@={addRecipeViewmodel.recipe}"
                android:inputType="textUri" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/breakfast_icon"
            android:layout_width="@dimen/list_item_icon_size"
            android:layout_height="@dimen/list_item_icon_size"
            android:contentDescription="@string/content_description_meal_image"
            android:padding="@dimen/half_padding"
            app:layout_constraintTop_toBottomOf="@id/url_input_layout"
            app:layout_constraintStart_toStartOf="@id/vertical_guideline_left"
            app:layout_constraintBottom_toTopOf="@id/fish_checkbox"
            app:layout_constraintEnd_toStartOf="@id/brunch_icon"
            android:background="@drawable/ic_launcher_background_round"
            app:srcCompat="@drawable/ic_1"
            android:clickable="true"
            android:onClick="@{() -> addRecipeViewmodel.onSetMealType(1)}"/>

        <TextView
            android:id="@+id/breakfast_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dosis_regular"
            android:gravity="center_horizontal"
            android:text="@string/breakfast"
            android:textSize="@dimen/add_recipe_meal_text"
            app:layout_constraintTop_toBottomOf="@id/breakfast_icon"
            app:layout_constraintStart_toStartOf="@id/breakfast_icon"
            app:layout_constraintEnd_toEndOf="@id/breakfast_icon" />

        <ImageView
            android:id="@+id/brunch_icon"
            android:layout_width="@dimen/list_item_icon_size"
            android:layout_height="@dimen/list_item_icon_size"
            android:contentDescription="@string/content_description_meal_image"
            android:padding="@dimen/half_padding"
            app:layout_constraintTop_toBottomOf="@id/url_input_layout"
            app:layout_constraintStart_toEndOf="@id/breakfast_icon"
            app:layout_constraintBottom_toTopOf="@id/fish_checkbox"
            app:layout_constraintEnd_toStartOf="@+id/lunch_icon"
            android:background="@drawable/ic_launcher_background_round"
            app:srcCompat="@drawable/ic_2"
            android:clickable="true"
            android:onClick="@{() -> addRecipeViewmodel.onSetMealType(2)}"/>

        <TextView
            android:id="@+id/brunch_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dosis_regular"
            android:gravity="center_horizontal"
            android:text="@string/brunch"
            android:textSize="@dimen/add_recipe_meal_text"
            app:layout_constraintTop_toBottomOf="@id/brunch_icon"
            app:layout_constraintStart_toEndOf="@id/brunch_icon"
            app:layout_constraintEnd_toStartOf="@id/brunch_icon" />
        <ImageView
            android:id="@+id/lunch_icon"
            android:layout_width="@dimen/list_item_icon_size"
            android:layout_height="@dimen/list_item_icon_size"
            android:contentDescription="@string/content_description_meal_image"
            android:padding="@dimen/half_padding"
            app:layout_constraintTop_toBottomOf="@id/url_input_layout"
            app:layout_constraintStart_toEndOf="@id/brunch_icon"
            app:layout_constraintBottom_toTopOf="@id/fish_checkbox"
            app:layout_constraintEnd_toStartOf="@id/dinner_icon"
            android:background="@drawable/ic_launcher_background_round"
            app:srcCompat="@drawable/ic_3"
            android:clickable="true"
            android:onClick="@{() -> addRecipeViewmodel.onSetMealType(3)}"/>

        <TextView
            android:id="@+id/lunch_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dosis_regular"
            android:gravity="center_horizontal"
            android:text="@string/lunch"
            android:textSize="@dimen/add_recipe_meal_text"
            app:layout_constraintTop_toBottomOf="@id/lunch_icon"
            app:layout_constraintStart_toEndOf="@id/lunch_icon"
            app:layout_constraintEnd_toStartOf="@id/lunch_icon" />

        <ImageView
            android:id="@+id/dinner_icon"
            android:layout_width="@dimen/list_item_icon_size"
            android:layout_height="@dimen/list_item_icon_size"
            android:contentDescription="@string/content_description_meal_image"
            android:padding="@dimen/half_padding"
            app:layout_constraintTop_toBottomOf="@id/url_input_layout"
            app:layout_constraintStart_toEndOf="@id/lunch_icon"
            app:layout_constraintBottom_toTopOf="@id/fish_checkbox"
            app:layout_constraintEnd_toStartOf="@id/sweets_icon"
            android:background="@drawable/ic_launcher_background_round"
            app:srcCompat="@drawable/ic_4"
            android:clickable="true"
            android:onClick="@{() -> addRecipeViewmodel.onSetMealType(4)}"/>

        <TextView
            android:id="@+id/dinner_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dosis_regular"
            android:gravity="center_horizontal"
            android:text="@string/dinner"
            android:textSize="@dimen/add_recipe_meal_text"
            app:layout_constraintTop_toBottomOf="@id/dinner_icon"
            app:layout_constraintStart_toEndOf="@id/dinner_icon"
            app:layout_constraintEnd_toStartOf="@id/dinner_icon" />

        <ImageView
            android:id="@+id/sweets_icon"
            android:layout_width="@dimen/list_item_icon_size"
            android:layout_height="@dimen/list_item_icon_size"
            android:contentDescription="@string/content_description_meal_image"
            android:padding="@dimen/half_padding"
            app:layout_constraintTop_toBottomOf="@id/url_input_layout"
            app:layout_constraintStart_toEndOf="@id/dinner_icon"
            app:layout_constraintBottom_toTopOf="@id/fish_checkbox"
            app:layout_constraintEnd_toStartOf="@+id/vertical_guideline_right"
            android:background="@drawable/ic_launcher_background_round"
            app:srcCompat="@drawable/ic_5"
            android:clickable="true"
            android:onClick="@{() -> addRecipeViewmodel.onSetMealType(5)}"/>

        <TextView
            android:id="@+id/sweets_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dosis_regular"
            android:gravity="center_horizontal"
            android:text="@string/sweets"
            android:textSize="@dimen/add_recipe_meal_text"
            app:layout_constraintTop_toBottomOf="@id/sweets_icon"
            app:layout_constraintStart_toEndOf="@id/sweets_icon"
            app:layout_constraintEnd_toStartOf="@id/sweets_icon" />

        <CheckBox
            android:id="@+id/fish_checkbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/list_item_text_size"
            app:layout_constraintEnd_toStartOf="@id/veggie_checkbox"
            app:layout_constraintStart_toStartOf="@id/vertical_guideline_left"
            app:layout_constraintTop_toBottomOf="@id/lunch_icon"
            app:layout_constraintBottom_toTopOf="@id/submit_recipe_btn"
            android:textColor="@color/Text"
            android:fontFamily="@font/dosis_medium"
            android:textSize="@dimen/checkbox_text_size"
            android:text="@string/fish_craving_checkbox"
            android:checked="@={addRecipeViewmodel.fish}" />

        <CheckBox
            android:id="@+id/veggie_checkbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/list_item_text_size"
            app:layout_constraintEnd_toEndOf="@id/vertical_guideline_right"
            app:layout_constraintStart_toEndOf="@id/fish_checkbox"
            app:layout_constraintTop_toBottomOf="@id/lunch_icon"
            app:layout_constraintBottom_toTopOf="@id/submit_recipe_btn"
            android:textColor="@color/Text"
            android:fontFamily="@font/dosis_medium"
            android:textSize="@dimen/checkbox_text_size"
            android:text="@string/veggie_checkbox"
            android:checked="@={addRecipeViewmodel.veggie}" />

        <!--            onClick parameter calls function directly from layout-->
        <Button
            android:id="@+id/submit_recipe_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_solid"
            android:fontFamily="@font/robotomono_bold"
            android:text="@string/submit"
            android:onClick="@{() -> addRecipeViewmodel.saveNewRecipe()}"
            android:textSize="@dimen/button_text_size"
            app:layout_constraintTop_toBottomOf="@id/horizontal_guideline_bottom"
            app:layout_constraintBottom_toTopOf="@id/horizontal_guideline_bottom_nav"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontal_guideline_top2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.125" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontal_guideline_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontal_guideline_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontal_guideline_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontal_guideline_bottom_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.93" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_guideline_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_guideline_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>