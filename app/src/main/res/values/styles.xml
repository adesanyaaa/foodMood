<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondaryDark</item>
        <item name="android:textColor">@color/Text</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="SpinnerStyle" parent="@style/Base.Widget.AppCompat.Spinner.Underlined">
        <item name="strokeWidth">2dp</item>
        <item name="fontFamily">@font/dosis_medium</item>
        <item name="android:textSize">@dimen/list_item_text_size</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/full_background</item>
    </style>

</resources>
